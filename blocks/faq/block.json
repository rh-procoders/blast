{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "acf/faq",
	"title": "FAQ",
	"description": "FAQ section with expandable accordion items",
	"category": "blast",
	"icon": "admin-page",
	"keywords": ["faq", "accordion", "questions"],
	"acf": {
        "mode": "preview",
        "renderTemplate": "template.php",
        "blockVersion": 3
    },
	"supports": {
        "align": false,
        "anchor": true,
        "customClassName": true,
        "spacing": {
            "margin": ["top", "bottom", "left", "right"],
            "padding": ["top", "bottom", "left", "right"]
        },
        "color": {
            "background": true,
            "gradients": true,
            "text": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "usesContext": ["postId", "postType", "queryId"],
    "textdomain": "blast-2025",
    "editorScript": "file:./js/script.js",
    "editorStyle": "file:./css/editor-style.css",
    "style": "file:./css/view-style.css",
    "viewScript": "file:./js/script.js"
}
