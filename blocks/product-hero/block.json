{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "acf/product-hero",
    "title": "Product Hero",
    "description": "A custom hero block for the product page with images and call-to-action",
    "category": "theme",
    "icon": "cover-image",
    "keywords": ["hero", "product", "banner", "cta"],
    "acf": {
        "mode": "preview",
        "renderTemplate": "template.php",
        "blockVersion": 3
    },
    "supports": {
        "align": ["wide", "full"],
        "anchor": true,
        "customClassName": true,
        "spacing": {
            "margin": ["top", "bottom"],
            "padding": ["top", "bottom"]
        },
        "color": {
            "background": true,
            "gradients": true,
            "text": true
        },
        "typography": {
            "fontSize": false,
            "lineHeight": false
        },
        "jsx": true
    },
    "example": {
        "attributes": {
            "mode": "preview"
        }
    },
    "usesContext": ["postId", "postType", "queryId"],
    "textdomain": "blast-2025",
    "editorScript": "file:./js/editor.js",
    "editorStyle": "file:./css/editor-style.css",
    "style": "file:./css/view-style.css",
    "viewScript": "file:./js/view.js"
}