{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "acf/testimonials-slider",
    "title": "Testimonials Slider",
    "description": "A responsive testimonials slider with company logos and quotes",
    "category": "theme",
    "icon": "format-quote",
    "keywords": ["testimonials", "slider", "quotes", "reviews", "splide"],
    "acf": {
        "mode": "preview",
        "renderTemplate": "template.php",
        "blockVersion": 3
    },
    "supports": {
        "align": ["wide", "full"],
        "anchor": true,
        "customClassName": true,
        "spacing": {
            "margin": ["top", "bottom"],
            "padding": ["top", "bottom"]
        },
        "color": {
            "background": true,
            "gradients": true,
            "text": true
        },
        "typography": {
            "fontSize": false,
            "lineHeight": false
        }
    },
    "example": {
        "attributes": {
            "mode": "preview",
            "data": {
                "section_heading": "Trusted by teams who build securely - at scale."
            }
        }
    },
    "usesContext": ["postId", "postType"],
    "textdomain": "blast-2025",
    "editorStyle": "file:./css/editor-style.css",
    "style": "file:./css/view-style.css",
    "viewScript": "file:./js/view.js"
}