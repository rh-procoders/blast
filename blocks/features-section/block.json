{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "acf/features-section",
    "title": "Features Section",
    "description": "A features section with gradient background, heading, and feature cards with icons",
    "category": "theme",
    "icon": "grid-view",
    "keywords": ["features", "benefits", "cards", "gradient", "section"],
    "acf": {
        "mode": "preview",
        "renderTemplate": "template.php",
        "blockVersion": 3
    },
    "supports": {
        "align": ["wide", "full"],
        "anchor": true,
        "customClassName": true,
        "spacing": {
            "margin": ["top", "bottom"],
            "padding": ["top", "bottom"]
        },
        "color": {
            "background": true,
            "gradients": true,
            "text": true
        },
        "typography": {
            "fontSize": false,
            "lineHeight": false
        }
    },
    "example": {
        "attributes": {
            "mode": "preview",
            "data": {
                "section_heading": "Lead with Prevention.\nWin with Confidence."
            }
        }
    },
    "usesContext": ["postId", "postType"],
    "textdomain": "blast-2025",
    "editorStyle": "file:./css/editor-style.css",
    "style": "file:./css/view-style.css"
}